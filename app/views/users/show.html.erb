<% provide(:title, @user.name) %>

<div class="row">
  <aside class="col-md-4">
    
    <section class="ava">
      <h2>Profile</h2>
      <center>
      <h1>
        
        <%= gravatar_for @user %>
        <%= @user.name %>

        
      </h1>
      </center>
    </section>
    <section class="stats">
      <center>
      <%= render 'shared/stats' %>
    </center>
    </section>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts %>
    <% end %>
  </div>
</div>